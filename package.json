{
  "name": "@balena/jellyfish-logger",
  "version": "0.0.176",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-logger.git"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "description": "Logger library for Jellyfish",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{js}"
    ],
    "modules": [
      "lib"
    ]
  },
  "scripts": {
    "lint": "balena-lint -e js --typescript lib && jellycheck && deplint && depcheck --ignores=shellcheck",
    "lint-fix": "balena-lint -e js --typescript --fix lib",
    "test": "npm run doc && catch-uncommitted --skip-node-versionbot-changes && make lint && make test",
    "doc": "jsdoc2md --template doc/README.hbs lib/index.js lib/error-reporter.js > README.md",
    "postinstall": "if [ -z \"$CI\" ] && [ -d \".git\" ]; then husky install; fi"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-assert": "^1.0.40",
    "@balena/jellyfish-environment": "^2.3.10",
    "@sentry/node": "^5.29.1",
    "errio": "^1.2.2",
    "le_node": "^1.8.0",
    "lodash": "^4.17.20",
    "typed-errors": "^1.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.0.9",
    "@balena/lint": "^5.3.0",
    "ava": "^3.14.0",
    "catch-uncommitted": "^1.6.2",
    "depcheck": "^1.3.1",
    "deplint": "^1.1.2",
    "husky": "^5.0.6",
    "jsdoc-to-markdown": "^6.0.1",
    "lint-staged": "^10.5.3"
  },
  "lint-staged": {
    "*.js": [
      "balena-lint -e js --typescript --fix",
      "npm run doc",
      "git add ."
    ]
  }
}
