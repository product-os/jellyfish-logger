{
  "name": "@balena/jellyfish-logger",
  "version": "2.1.72",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-logger.git"
  },
  "engines": {
    "node": ">=12.15.0"
  },
  "description": "Logger library for Jellyfish",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint-fix",
      "git add ."
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint lib test && jellycheck && deplint && depcheck --ignore-bin-package --ignores=winston-transport,@types/jest",
    "lint-fix": "balena-lint --fix lib test",
    "unit": "jest",
    "test": "catch-uncommitted --skip-node-versionbot-changes && npm run lint && npm run unit",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-assert": "^1.1.25",
    "@balena/jellyfish-environment": "^4.1.17",
    "@sentry/node": "^6.4.1",
    "errio": "^1.2.2",
    "lodash": "^4.17.21",
    "r7insight_node": "^3.0.1",
    "typed-errors": "^1.1.0",
    "winston": "^3.3.3",
    "winston-transport": "^4.4.0"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.1.1",
    "@balena/lint": "^6.0.0",
    "@balena/jellyfish-config": "^1.0.6",
    "@types/intercept-stdout": "^0.1.0",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "catch-uncommitted": "^2.0.0",
    "depcheck": "^1.4.1",
    "deplint": "^1.1.3",
    "intercept-stdout": "^0.1.2",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "sentry-testkit": "^3.3.2",
    "simple-git-hooks": "^2.4.1",
    "strip-ansi": "^6.0.0",
    "ts-jest": "^26.5.6",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
