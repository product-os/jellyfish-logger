{
  "name": "@balena/jellyfish-logger",
  "version": "3.0.122",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-logger.git"
  },
  "engines": {
    "node": ">=12.15.0"
  },
  "description": "Logger library for Jellyfish",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "balena-lint --fix"
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint lib test && jellycheck && deplint && depcheck --ignore-bin-package --ignores=winston-transport,@types/jest,typedoc",
    "lint:fix": "balena-lint --fix lib test",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "LOGLEVEL=debug jest",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "Apache-2.0",
  "dependencies": {
    "@balena/jellyfish-assert": "^1.1.80",
    "@balena/jellyfish-environment": "^5.1.8",
    "@sentry/node": "^6.14.3",
    "errio": "^1.2.2",
    "lodash": "^4.17.21",
    "typed-error": "^3.2.1",
    "winston": "^3.3.3",
    "winston-transport": "^4.4.0"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.1.8",
    "@balena/jellyfish-config": "^1.5.10",
    "@balena/lint": "^6.1.1",
    "@types/intercept-stdout": "^0.1.0",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.176",
    "depcheck": "^1.4.2",
    "deplint": "^1.1.3",
    "intercept-stdout": "^0.1.2",
    "jest": "^27.3.1",
    "lint-staged": "^12.0.2",
    "sentry-testkit": "^3.3.7",
    "simple-git-hooks": "^2.7.0",
    "ts-jest": "^27.0.7",
    "typedoc": "^0.22.9",
    "typescript": "^4.4.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "versionist": {
    "publishedAt": "2021-11-16T03:54:59.712Z"
  }
}
