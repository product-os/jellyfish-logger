{
  "name": "@balena/jellyfish-logger",
  "version": "0.0.114",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-logger.git"
  },
  "engines": {
    "node": ">=12.15.0"
  },
  "description": "Logger library for Jellyfish",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{js}"
    ],
    "modules": [
      "lib"
    ]
  },
  "scripts": {
    "test": "npm run doc && catch-uncommitted --skip-node-versionbot-changes && make lint && make test",
    "doc": "jsdoc2md --template doc/README.hbs lib/index.js lib/error-reporter.js > README.md"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-assert": "^1.0.15",
    "@balena/jellyfish-environment": "^2.2.39",
    "@sentry/node": "^5.27.1",
    "errio": "^1.2.2",
    "le_node": "^1.8.0",
    "lodash": "^4.17.20",
    "typed-errors": "^1.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.0.7",
    "ava": "^3.13.0",
    "catch-uncommitted": "^1.6.2",
    "depcheck": "^1.2.0",
    "deplint": "^1.1.2",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^15.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.3",
    "eslint-plugin-lodash": "^7.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "husky": "^4.3.0",
    "jsdoc-to-markdown": "^6.0.1",
    "lint-staged": "^10.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "npm run doc"
    ]
  }
}
