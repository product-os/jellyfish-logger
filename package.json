{
  "name": "@balena/jellyfish-logger",
  "version": "6.0.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-logger.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "description": "Logger library for Jellyfish",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "balena-lint --fix"
    ],
    "*.{json,yml}": [
      "prettier -w"
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint lib test && deplint && prettier --check **/*.json **/*.yml",
    "lint:fix": "balena-lint --fix lib test && prettier -w **/*.json **/*.yml",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "LOGLEVEL=debug jest",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "Apache-2.0",
  "dependencies": {
    "@balena/jellyfish-assert": "^1.11.0",
    "@balena/jellyfish-environment": "^21.0.0",
    "errio": "^1.2.2",
    "lodash": "^4.17.21",
    "typed-error": "^3.2.2",
    "winston": "^3.10.0",
    "winston-transport": "^4.5.0"
  },
  "devDependencies": {
    "@balena/lint": "^6.2.2",
    "@types/intercept-stdout": "^0.1.0",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.192",
    "deplint": "^1.1.3",
    "intercept-stdout": "^0.1.2",
    "jest": "^29.5.0",
    "lint-staged": "^14.0.1",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.8.1",
    "ts-jest": "^29.0.5",
    "typedoc": "^0.23.28",
    "typescript": "^5.0.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "versionist": {
    "publishedAt": "2023-08-27T06:44:11.992Z"
  }
}
